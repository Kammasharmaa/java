// print the star pattern
import java.util.Scanner;

public class Main
{
public static void main(String[] args) {
//i for the row and j for the columns
// row denote the number of rows you want to print
int i, j, row=6;
for(i=0; i&lt;row; i++)
{
for(j=0; j&lt;=i; j++)
{
//print the star
System.out.print(&quot;*&quot;);
}
System.out.println();
}
}
}
